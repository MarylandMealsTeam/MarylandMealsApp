{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "server/server.mjs",
    "lib/routes/users.mjs",
    "models/User.mjs",
    "scripts/createUser.mjs",
    "server/mongodb.js",
    "lib/auth.js",
    "nativewind-env.d.ts"
, "react-native.config.js"  ]
}